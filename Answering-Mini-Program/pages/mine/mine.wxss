/*授权登陆*/
button{
  margin:30px auto 0;
}
.result{
  width:200px;
  margin:20px auto;
  text-align: center;
}
.result .headimg{
  width:200px;
  height: 200px;
  border-radius: 100px;
  margin-bottom: 20px;
}
.result .headimg image{
  width:200px;
  height: 200px;
  border-radius: 100px;
}

/*头像*/
.contain {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
}

.userinfo-nickname {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}

/*功能项*/
.main{
  display: center;
  flex-direction: column;
  align-items: center;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.title {
  margin-left: 60rpx;
  font-size: 60rpx;
  text-align: center;
  position: relative;
  top: 50rpx;
}
.menu{
  display: flex;
  flex-wrap: wrap;
  justify-content: center; 
  width: 100%;
  height: 100px;
  margin: auto;
  background-color: #FFF;
  box-sizing: unset;
  border:0 rpx;
}
.navigator{
  width: 52%;
  position: center;
  top:200rpx;
}
.button_image{
  width: 47rpx;
  height: 47rpx;
}
.button_text{
  margin-left: 47rpx;
  font-size: 47rpx;
  color: #000;
}



